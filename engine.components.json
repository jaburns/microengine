[{
    "name": "Transform",
    "fields": [
        { "name": "name",         "type": "string" },
        { "name": "position",     "type": "vec3"   },
        { "name": "rotation",     "type": "versor" },
        { "name": "scale",        "type": "vec3",   "default": "{1.f,1.f,1.f}" },
        { "name": "parent",       "type": "Entity",              "hide": true },
        { "name": "children_",    "type": "Entity", "vec": true, "hide": true, "serialize": false },
        { "name": "worldMatrix_", "type": "mat4",                "hide": true, "serialize": false }
    ]
},{
    "name": "InputFrame",
    "hide": true,
    "fields": [
        { "name": "mouse_pos",   "type": "vec2" },
        { "name": "left_mouse",  "type": "bool" },
        { "name": "right_mouse", "type": "bool" },
        { "name": "keys",        "type": "int", "vec": true }
    ]
},{
    "name": "InputState",
    "hide": true,
    "serialize": false,
    "fields": [
        { "name": "cur",  "type": "InputFrame" },
        { "name": "prev", "type": "InputFrame" }
    ]
},{
    "name": "ClockInfo",
    "hide": true,
    "serialize": false,
    "fields": [
        { "name": "delta_millis",       "type": "float" },
        { "name": "millis_since_start", "type": "float" }
    ]
},{
    "name": "MeshRenderer",
    "fields": [
        { "name": "mesh",     "type": "string" },
        { "name": "material", "type": "string" }
    ]
},{
    "name": "MeshCollider",
    "fields": [
        { "name": "mesh",           "type": "string" },
        { "name": "collisionData_", "type": "pointer" }
    ]
},{
    "name": "Camera",
    "fields": [
        { "name": "is_editor", "type": "bool" },
        { "name": "fov",       "type": "float", "default": "1.5708f" },
        { "name": "near_clip", "type": "float", "default": "1.0f"    },
        { "name": "far_clip",  "type": "float", "default": "500.0f"  }
    ]
}]
